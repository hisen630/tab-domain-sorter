{
  "manifest_version": 3,
  "name": "Tab Domain Sorter",
  "description": "自动按域名对标签页进行排序和分组",
  "version": "1.0",
  "permissions": [
    "tabs",
    "tabGroups",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 